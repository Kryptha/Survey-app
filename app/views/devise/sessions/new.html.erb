<main class='h-screen bg-mainColor flex justify-around items-center'>
  <section class='w-full max-w-sm p-4 bg-white border border-gray-200 rounded-lg shadow-md sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700'>
    <h2 class='text-xl font-medium text-gray-900 dark:text-white'>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field pt-2">
        <%= f.label :email, class:'log-label'%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'log-input',placeholder:'name@company.com', required: true %>
      </div>

      <div class="field pt-2">
        <%= f.label :password, class: 'log-label' %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder:'••••••••',class:'log-input', required: true %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field pt-2">
          <%= f.check_box :remember_me, class: 'w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-blue-600 dark:ring-offset-gray-800' %>
          <%= f.label :remember_me, class: 'ml-2 text-sm font-medium text-gray-900 dark:text-gray-300'%>
        </div>
      <% end %>

      <div class="actions pt-2">
        <div class='w-full bg-signIn rounded font-medium rounded-lg text-sm px-5 py-2.5 text-center hover:bg-blue-200 focus:ring-4 focus:outline-none focus:ring-blue-300'>
          <%= f.submit "Log in"%>
        </div>
      </div>
    <% end %>
    <div class='flex justify justify-around items-center pt-2 text-sm'>
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'text-center text-white hover:underline' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'text-center text-white hover:underline text-center' %>
    <div>
  </section>
  <section>
    <%= image_tag('ruby.png', width: '300')%>
  </section>
</main>
